<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1 id="title"><%= title %></h1>
    <div id="main-container">
        <form action="/add-to-list" method="POST">
            <textarea placeholder="Write your description" id="description" name="description"></textarea>
            <div id="flex-box-form">
                <select id="category" name="category">
                    <option value="Personal">Personal</option>
                    <option value="Work">Work</option>
                    <option value="School">School</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="Other">Other</option>
                </select>
                <input id="date" type="date" name="date">
            </div>
            <div id="buttons-container">
                <button type="submit" id="submit">Add To List</button>
            </div>    
        </form>
        <a href="" id="delete-link" onclick="checkList()">
            <button type="button" id="delete">Delete</button>
        </a> 
        <div id="taskList">
            <% for(let i of task_list){ %>
                    <div class="task-container">
                        <div class="task-container-left">
                            <input class="checkboxes" type="checkbox" value=<%= i._id%>></input>
                            <div>
                                <p> <%= i.description %> </p>
                                <p> <%= i.date %> </p>
                            </div>
                        </div>
                        <p class="task-container-right"> <%= i.category %> </p>
                    </div>
            <% } %>
        </div>
    </div>
    <script type="text/javascript" src="/js/script.js"></script>
</body>
</html>